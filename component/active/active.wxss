.active-content{
    margin-bottom: 10rpx;
    padding-bottom: 10rpx;
    width: 750rpx;
    background: #FFF;
  }
  .user-info{
    display: flex;
    height: 100rpx;
    padding: 10rpx 10rpx;
  }
  .user-image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
  }
  .release-info{
    display: flex;
    flex-direction: column;
    align-content: center;
    margin-left: 20rpx;
    padding: 10rpx;
  }
  .name{
    flex: 1;
    font-size: 15px;
  }
  .release-time{
    flex: 1;
    font-size: 13px;
    color: #7B7B7B;
  }
  .active-text{
    display: flex;
    flex-direction: column;
    font-size: 15px;
    padding: 0 80rpx 0 140rpx;
  }
  .active-image{
    font-size: 0px;
    margin: 10rpx 80rpx 10rpx 140rpx;
  }
  .picture{
    width: 170rpx;
    height: 170rpx;
    margin: 2rpx;
  }
  /* download and share */
  .handle{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
  }
  .download, .share{
    display: flex;
    align-items: center;
    padding: 10rpx 50rpx 10rpx 0rpx;
  }
  .handle image{
    width: 45rpx;
    height: 45rpx;
  }
  .handle text{
    font-size: 15px;
    color: #7B7B7B;
  }
  