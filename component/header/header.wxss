/* component/header/header.wxss */
.header{
    position: relative;
}
.header-bg{
   display: flex;
   flex-direction: row;
   justify-items: center;
}
.header-bg image{ 
   width: 100%;
   height: 240rpx;
}
.header-user{
   position: absolute;
   top: 50rpx; 
   right: 80rpx;
   display: flex;
   flex-direction: column;
   justify-content: center;
}
.header-user image{
   width: 120rpx;
   height: 120rpx;
   border-radius: 50%;
}
.header-user text{
   color: #fff;
   font-size: 12pt;
   text-align: center;
}
.userinfo-avatar{
   box-shadow: 0px 5px 5px 0px #777;
}