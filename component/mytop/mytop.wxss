.top-content{
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  overflow: hidden;
  position: relative;
}
image{
  width: 100%;
  height: 100%;
}
.tags{
  width: 100%;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 100;
  position: absolute;
  bottom: 0;
  color: #ffffff;
  font-size: 14px;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
