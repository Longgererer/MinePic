<view class="rank-items" bindtap="{{_tapFunc}}" hover-class="hover" hover-start-time="10" hover-stay-time="100">
    <image class="items-img" src="{{itemsImg}}" wx:if="{{info === 'my'}}"/>
    <text class="items-text {{info === 'my' ? '' : 'items-fans'}}">{{itemsText}}</text>
    <text wx:if="{{itemsText === '提现与返佣'}}" class="items-info-text">{{money}}元</text>
    <text wx:if="{{itemsText === '我的粉丝'}}" class="items-info-text">{{fans}}</text>
    <view class="arrow">
    </view>
</view>