page{
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  position: relative;
}
.money{
  width: 100%;
  background-color: #fff;
}
.money-img{
  margin-top: 40rpx;
}
.money-img image{
  width: 240rpx;
  height: 240rpx;
}
.title{
  margin-top: 10rpx;
}
.money-can-pay{
  margin-bottom: 20rpx;
}
.title, .money-can-pay{
  font-size: 32rpx;
  color: #999999;
}
.money-num{
  font-size: 50rpx;
}
.money-num text{
  font-size: 90rpx;
}
.money-btn{
  width: 100%;
  position: fixed;
  bottom: 0px;
  background-color: #1abc9c;
  color: #fff;
  font-size: 32rpx;
  border-radius: 0;
  border: none;
}
.hover{
  background-color: #fff;
  color: #1abc9c;
  border: 1px solid #1abc9c;
}
.money-bgc{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 999;
}
.money-model{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  border-radius: 20rpx;
  background-color: #fff;
  overflow: hidden;
  position: absolute;
  z-index: 1000;
  box-shadow: rgba(0, 0, 0, 0.35) 0px 0px 3px;
}
.money-model>view{
  width: 100%;
  border-bottom: 1px solid rgb(228, 228, 228);
}
.arrow{
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #cecece;
  border-right: 4rpx solid #cecece;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
}
.money-center{
  position: relative;
}
.money-center-num{
  position: absolute;
  right: 50rpx;
}
.money-center, .money-pay-way{
  height: 100rpx;
  font-size: 32rpx;
}
.money-center-num{
  color: #999999;
}
.money-pay-way image{
  width: 70rpx;
  height: 55rpx;
}
.money-pay-way :not(:first-child){
  margin-right: 10rpx;
}
.money-center-title, .money-pay-way-title{
  margin-left: 20rpx;
}
.blue{
  color: rgb(0, 153, 255);
}
.img-box{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 0;
  border-radius: 50%;
  overflow: hidden;
}
.img-box image{
  width: 100%;
  height: 100%;
}
.money-confirm{
  background-color: #fff;
  color: #1abc9c;
  width: 100%;
  margin-top: 40rpx;
  border-radius: 0;
}
button::after{
  border-radius: 0;
}
.button-hover{
  background-color: #eeeeee;
}