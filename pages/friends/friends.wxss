page {
  background: #F3F3F3;
}
.tabs{
  display: flex;
  width: 100%;
  height: 100rpx;
  background: #ffffff;
}
my-friends{
  flex: 1;
  box-sizing: border-box;
  border-left: 1px solid #eeeded;
}
my-friends:first{
   border: none;
}
.container{
  padding: 0;
}
friends-item{
  height: 150rpx;
  width: 100%;
  border-top: 1rpx solid #F3F3F3;
  border-bottom: 1rpx solid #F3F3F3;
}
.border{
  border-bottom: 10rpx solid orange;
}